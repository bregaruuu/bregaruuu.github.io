    <script>
        
        var dati = localStorage.getItem('datiAnagrafici');

        if (dati) {
            var righe = dati.split("|"); 
            var corpot = document.getElementById("tabellaDati").getElementsByTagName('tbody')[0];

            for (var i = 0; i < righe.length; i++) {
                var newRow = corpot.insertRow();
                var celle = righe[i].split(","); 

                for (var j = 0; j < celle.length; j++) {
                    var cell = newRow.insertCell(j);
                    cell.textContent = celle[j];
                }
            }
        } else {
            alert("Nessun dato trovato!");
        }
    </script>

